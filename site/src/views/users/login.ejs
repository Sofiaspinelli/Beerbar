<body class="login">
    <header>
        <div class="logo"><a href="/"><img src="../img/logo/logo-beerbar.png" alt="logo"></a></div>
        
        <!-- <nav>   
            <ul>
                <li><a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>
                <li><i class="fa-solid fa-bars"></i></li>
            </ul>  
        </nav> -->
    </header>
    <main>
        <h1>Login</h1>
        <form action="/users/login" method="post">
            <div class="container">
                <label for="user">Email</label>
                <input type="email" name="email" id="email" placeholder="Ingresa tu email" value="<%= locals.old && old.email ? old.email : null%>">
                
                <small id="emailError"><%= locals.errors && errors.email ? errors.email.msg : null %></small>
            </div>
            <div class="container">
                <small class="icon-eye" id="icon-eye"><i id="icon-l" class="fa-sharp fa-solid fa-eye-slash text-dark"></i></small>
                <label for="pass">Contraseña</label>
                <input type="password" name="pass" id="pass" placeholder="Ingresar Contraseña">
                
                <small id="passError"><%= locals.errors && errors.pass ? errors.pass.msg : null %></small>
            </div>
            <div>
                <label for="recordarme">Recordarme</label>
                <input type="checkbox" name="recordarme">
            </div>
            <div class="login_button">
                <button class="one" type="submit" id="btn-login"><i class="fa-solid fa-right-to-bracket"></i> Login</button>
                <button type="submit"><a href="/users/register"><i class="fa-solid fa-user"></i>sign-up</a></button>
            </div>
            <div class="extra">
                <!-- <div>
                    <input type="checkbox" name="save" id="save" value="save">
                    <label for="save">recordarme</label>
                </div> -->
                <a href="*">Olvide mi cintraseña</a>
            </div>
        </form>
    </main>
    <%- include('../partials/footer') %>
    <script src="/js/validacionLogin.js"></script>
</body>
</html>