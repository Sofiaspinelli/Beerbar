<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: 'Administrador'}) %>
</head>
<body class="listaProductos">
    <%- include('../partials/header') %>

    <main>
        <section>
            <button  class="btn-crear"><a href="/admin/crear">Crear Producto</a></button>
        </section> 
        

        <div class="table-responsive container margin">
            <table class="table">
                <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">Marca</th>
                <th scope="col">Stock</th>
                <th scope="col">Precio</th>
                <th scope="col">Des</th>
                <th scope="col">Accion</th>
                
                </tr>
                </thead>
                <tbody>
                    <% productos.forEach(producto => { %>
                        <tr>
        

                                <th scope="row"><a href="/admin/editar/<%= producto.id %>"><%= producto.id %> </a></th>
                                <td><a href="/admin/editar/<%= producto.id %>"><%= producto.producto %></a></td>
                                <td><a href="/products/detail/<%= producto.id %>"><%= producto.marca %></a></td>
                                <td><a href="/admin/editar/<%= producto.id %> "><%= producto.stock - producto.vendidos %></a></td>
                                <td><a href="/admin/editar/<%= producto.id %> "><%= producto.precio %></a></td>
                                <td><a href="/admin/editar/<%= producto.id %> "><%= producto.descuento %></a></td>
                                <td><a href="/admin/editar/<%= producto.id%>"> <form class="trashForm" action="/admin/eliminar/<%= producto.id %>?_method=DELETE" method="post" ><button type="submit" class="trash"><i class="fa-solid fa-trash-can icon"></i></button></form>  <button class="edit"> <a href="/admin/editar/<%= producto.id %> "><i class="fa-solid fa-pen-to-square icon"></i> </a></button></a></td>
                                <td>
                                </td>
                            </tr>

                            

                            <% }) %> 
                </tbody>
            </table>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>